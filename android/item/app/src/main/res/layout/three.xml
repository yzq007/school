<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#fff"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/z1"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center"
        android:weightSum="10"
        >
        <ImageButton
            android:id="@+id/back"
            android:layout_marginLeft="10dp"
            android:layout_weight="0.1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:src="@drawable/fanhuijiantou"
            android:background="#fff"
            />
        <TextView
            android:layout_marginRight="25dp"
            android:layout_weight="9.9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的资金"
            android:gravity="center"
            android:textSize="20dp"

            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/z2"
        android:layout_below="@id/z1"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="结余"
                android:textSize="18dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50.00"
                android:textSize="16dp"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/z3"
        android:layout_below="@id/z2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <LinearLayout
            android:id="@+id/zz1"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:background="#fc04ed"
            android:weightSum="2">

         <TextView
             android:text="现金"
             android:textSize="20dp"
             android:layout_weight="0.8"
             android:textColor="#fff"
             android:textStyle="bold"
             android:background="#fc04ed"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content" />
            <TextView
                android:layout_weight="0.8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="#fff"
                android:textStyle="bold"
                android:gravity="right"
                android:text="0.00"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/zz2"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:background="#fcad04"
            android:weightSum="2">
            <TextView
                android:text="欠款"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#fff"
                android:layout_weight="0.8"
                android:background="#fcad04"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_weight="0.8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="#fff"
                android:textStyle="bold"
                android:gravity="right"
                android:text="0.00"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/zz3"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:background="#04c5fc"
            android:weightSum="2">
            <TextView
                android:text="借出款"
                android:textStyle="bold"
                android:textColor="#fff"
                android:textSize="20dp"
                android:layout_weight="0.8"
                android:background="#04c5fc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_weight="0.8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#fff"
                android:gravity="right"
                android:text="0.00"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/zz4"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:background="#00ffff"
            android:weightSum="2">
            <TextView
                android:layout_weight="0.8"
                android:text="支付宝"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#fff"
                android:background="#00ffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textStyle="bold"
                android:textColor="#fff"
                android:layout_weight="0.8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:gravity="right"
                android:text="50.00"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/zz5"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:background="#04fc5b"
            android:weightSum="2">
            <TextView
                android:layout_weight="0.8"
                android:background="#04fc5b"
                android:text="微信"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_weight="0.8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:gravity="right"
                android:textStyle="bold"
                android:textColor="#fff"
                android:text="0.00"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/zz6"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:background="#04fca7"
            android:weightSum="2">
            <TextView
                android:layout_weight="0.8"
                android:background="#04fca7"
                android:text="储蓄卡"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_weight="0.8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:gravity="right"
                android:textStyle="bold"
                android:textColor="#fff"
                android:text="0.00"
                />
        </LinearLayout>
    </LinearLayout>
    <include layout="@layout/bottom"></include>
</RelativeLayout>