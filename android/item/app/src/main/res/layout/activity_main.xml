<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    tools:context="com.example.a16636.item.MainActivity">
    <RelativeLayout
        android:id="@+id/Rlogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">
      <TextView
          android:id="@+id/tname"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textColor="#ffffff"
          android:textSize="20dp"
          android:text="用户名："
          android:layout_alignParentTop="true"
          android:layout_alignParentLeft="true"
          android:layout_alignParentStart="true"
          android:layout_marginLeft="52dp"
          android:layout_marginStart="52dp"
          android:layout_marginTop="100dp" />
        <EditText
            android:id="@+id/ename"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="请输入你的用户名"
            android:gravity="center"
            android:layout_alignBaseline="@+id/tname"
            android:layout_alignBottom="@+id/tname"
            android:layout_toRightOf="@+id/tname"
            android:layout_toEndOf="@+id/tname" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tpassword"
            android:text="密    码："
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:layout_marginTop="50dp"
            android:layout_alignLeft="@id/tname"
            android:layout_below="@id/tname"
            />
        <EditText
            android:id="@+id/epassword"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="请输入你的密码"
            android:gravity="center"
            android:layout_alignBaseline="@+id/tpassword"
            android:layout_alignBottom="@+id/tpassword"
            android:layout_toRightOf="@+id/remember"
            android:layout_alignLeft="@id/ename"
            android:layout_toEndOf="@+id/remember" />
        <CheckBox
            android:id="@+id/remember"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tpassword"
            android:layout_marginTop="25dp"
            android:text="记住密码"
            android:textColor="#ffffff"
            android:layout_alignLeft="@id/tpassword"/>
        <CheckBox
            android:id="@+id/zidong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="自动登录"
            android:textColor="#ffffff"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="15dp"
            android:layout_below="@id/epassword"
            />
        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="登陆"
            android:layout_below="@+id/zidong"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80dp" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
