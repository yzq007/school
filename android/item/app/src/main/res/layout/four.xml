<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:background="#fff"
        android:id="@+id/o1"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:weightSum="10"
        android:gravity="center"
        >
        <ImageButton
            android:id="@+id/set"
            android:layout_marginLeft="10dp"
            android:layout_weight="0.1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/set"
            android:background="#fff"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="9.9"
            android:gravity="center"
            android:text="我的"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginRight="10dp"
            />
    </LinearLayout>
    <LinearLayout
        android:background="#fff"
        android:id="@+id/o2"
        android:layout_below="@id/o1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:weightSum="5"
        >
        <ImageView
            android:layout_weight="1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/touxiang1"
            />
        <LinearLayout
            android:layout_weight="4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
        <TextView
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:gravity="left"
            android:text="帅帅"
            android:textSize="25dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="bottom"
            android:text="********"
            android:textSize="20dp"
            />
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/o3"
        android:layout_below="@id/o2"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
       <LinearLayout
           android:id="@+id/collect"
           android:background="#fff"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:gravity="center"
           android:weightSum="10">
            <ImageView

                android:layout_weight="1"
                android:src="@drawable/collection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
           <TextView
               android:layout_weight="9"
               android:text="我的收藏"
               android:textSize="18dp"
               android:gravity="center"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />

       </LinearLayout>
        <LinearLayout
            android:id="@+id/drw"
        android:layout_below="@id/collect"
        android:layout_marginTop="20dp"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:weightSum="10">
        <ImageView
            android:layout_weight="1"
            android:src="@drawable/draw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_weight="9"
            android:text="个性装扮"
            android:textSize="18dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
        <LinearLayout
            android:id="@+id/look"
            android:layout_below="@id/drw"
            android:layout_marginTop="20dp"
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:weightSum="10">
            <ImageView
                android:layout_weight="1"
                android:src="@drawable/eye"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/lookbutton"
                android:layout_weight="9"
                android:text="看点"
                android:textSize="18dp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/draw"
            android:layout_marginTop="20dp"
            android:layout_below="@id/look"
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:weightSum="10">
            <ImageView
                android:layout_weight="1"
                android:src="@drawable/hui"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/draww"
                android:layout_weight="9"
                android:text="涂鸦"
                android:textSize="18dp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </RelativeLayout>

    <include layout="@layout/bottom"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"></include>
</RelativeLayout>