<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="585dp"
        android:background="@drawable/i">
        <RelativeLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
            <RelativeLayout
                android:id="@+id/linear"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="今日日程"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="#000"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/lin1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:background="#ffff"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linear">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/image1" />
                <TextView
                    android:layout_marginTop="15dp"
                    android:layout_centerHorizontal="true"
                    android:text="时间：13:30~15:10       事件：Android开发"
                    android:textColor="#333"
                    android:textSize="18dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:id="@+id/text1"
                    android:background="#000"
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/image1"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="地点：移动应用开发机房"
                    android:textSize="18dp"
                    android:textColor="#333"
                    android:layout_below="@id/text1"
                    android:layout_marginTop="5dp" />
                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:textSize="18dp"
                    android:layout_below="@id/text1"
                    android:layout_marginTop="2dp"
                    android:layout_marginLeft="350dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/line1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:background="#fff"
                android:layout_marginTop="130dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:id="@+id/image2" />
                <TextView
                    android:layout_marginTop="15dp"
                    android:layout_centerHorizontal="true"
                    android:text="时间：16：10                   事件：会议室开会"
                    android:textColor="#333"
                    android:textSize="18dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:id="@+id/text2"
                    android:background="#000"
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/image2"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="地点：会议室"
                    android:textSize="18dp"
                    android:textColor="#333"
                    android:layout_below="@id/text2"
                    android:layout_marginTop="5dp"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:background="#fff"
                android:layout_marginTop="230dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:id="@+id/image3"
/>
                <TextView
                    android:layout_marginTop="15dp"
                    android:layout_centerHorizontal="true"
                    android:text="时间：18：20                       事件：晚自习..."
                    android:textSize="18dp"
                    android:layout_width="wrap_content"
                    android:textColor="#333"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:id="@+id/text3"
                    android:background="#000"
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/image3"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="地点：二号教学楼409"
                    android:textSize="18dp"
                    android:layout_below="@id/text3"
                    android:textColor="#333"
                    android:layout_marginTop="5dp"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:background="#fff"
                android:layout_marginTop="330dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:id="@+id/image4" />
                <EditText
                    android:id="@+id/shijian"
                    android:text="时间：21:30                           事件：查寝......"
                    android:background="@null"
                    android:textSize="18dp"
                    android:layout_width="wrap_content"
                    android:textColor="#333"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="15dp"
                    android:layout_centerHorizontal="true" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:id="@+id/text4"
                    android:background="#000"
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/image4"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="地点：七号寝室楼"
                    android:textSize="18dp"
                    android:layout_below="@id/text4"
                    android:textColor="#333"
                    android:layout_marginTop="5dp"
                    />
                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:textSize="18dp"
                    android:layout_below="@id/text4"
                    android:layout_marginTop="2dp"
                    android:layout_marginLeft="350dp" />
            </RelativeLayout>

        </RelativeLayout>
    </RelativeLayout>


    <include layout="@layout/bottom"></include>
</LinearLayout>